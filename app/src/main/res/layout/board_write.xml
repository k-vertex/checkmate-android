<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--    android:background="#3B383E">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_write_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/close_vector"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="글 쓰기"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/upload_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="작성"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/write_board_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:hint="제목"
            android:textSize="22sp"/>
        <ImageView
            android:id="@+id/add_video"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/add_vector"
            android:layout_gravity="right"/>
        <EditText
            android:id="@+id/write_board_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@drawable/border"
            android:hint="내용을 입력하세요."
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>