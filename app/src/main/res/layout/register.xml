<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B383E"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Sign Up"
        android:textSize="45sp"
        android:textColor="#EAEAEA"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="이름"
            android:textColor="#EAEAEA"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_box"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="주민번호"
            android:textColor="#EAEAEA"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/input_rrn_front"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/border_box"
                android:maxLength="6"
                android:inputType="number"/>
            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#BDBDBD" />
            <EditText
                android:id="@+id/input_rrn_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/border_box"
                android:maxLength="7"
                android:inputType="number"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="아이디"
            android:textColor="#EAEAEA"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/input_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_box"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="비밀번호"
            android:textColor="#EAEAEA"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_box"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="비밀번호 확인"
            android:textColor="#EAEAEA"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/input_password_verify"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_box"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="관계"
            android:textColor="#EAEAEA"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:checkedButton="@id/radio_button_student">

            <RadioButton
                android:id="@+id/radio_button_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학생"
                android:textSize="20dp"
                android:textColor="#EAEAEA"/>
            <RadioButton
                android:id="@+id/radio_button_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학부모"
                android:textSize="20dp"
                android:textColor="#EAEAEA"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="학원 이름"
            android:layout_marginTop="20dp"
            android:textColor="#EAEAEA"
            android:textSize="18sp"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#212121"
        android:text="Sing Up"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>


</LinearLayout>